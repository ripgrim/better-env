{
  "name": "better-env",
  "version": "0.0.6",
  "description": "CLI for better-env",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "better-env": "dist/index.js",
    "be": "dist/index.js"
  },
  "types": "dist/index.d.ts",
  "exports": "./dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "build": "tsup",
    "start": "bun run dist/index.js",
    "typecheck": "tsc --noEmit",
    "test": "bun test",
    "lint": "eslint --ext .ts",
    "format:write": "prettier --write .",
    "format:check": "prettier --check .",
    "prepublishOnly": "bun run build",
    "release": "changeset version",
    "pub:release": "bun run build && bun publish --no-git-checks --access public",
    "pub:beta": "bun run build && bun publish --no-git-checks --access public --tag beta"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.10.6",
    "tsup": "^8.0.1",
    "type-fest": "^4.10.1",
    "typescript": "^5.3.3",
    "vitest": "^1.2.1"
  },
  "dependencies": {
    "@opentui/core": "^0.1.1",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "fs-extra": "^11.2.0",
    "ora": "^8.0.1",
    "prompts": "^2.4.2"
  }
}
